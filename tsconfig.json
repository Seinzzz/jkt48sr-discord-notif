{
    "ts-node": {
        "files": true,
        // Do not forget to `npm i -D tsconfig-paths`
        "require": [
            "tsconfig-paths/register"
        ]
    },
    "compilerOptions": {
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@root/*": [
                "*"
            ],
            "@/*": [
                "src/*"
            ],
        },
        "incremental": true,
        "target": "ES6",
        "module": "commonjs",
        "outDir": ".output",
        "rootDir": "src",
        "strict": true,
        "lib": [
            "ES6"
        ],
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*.ts",
        // "dev/**/*.ts",
        "**/*.js"
    ],
    "exclude": [],
    "compileOnSave": true
}