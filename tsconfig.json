{
    "ts-node": {
        "files": true,
        // Do not forget to `npm i -D tsconfig-paths`
        "require": [
            "tsconfig-paths/register"
        ]
    },
    "compilerOptions": {
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@root/*": [
                "*"
            ],
            "@/*": [
                "src/*"
            ],
        },
        "target": "ES2021",
        "module": "commonjs",
        "outDir": ".output",
        "rootDir": "src",
        "strict": true,
        "lib": [
            "ES2021"
        ],
        "esModuleInterop": true,
        "resolveJsonModule": true,
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "**/*.js"
    ],
    "compileOnSave": true
}