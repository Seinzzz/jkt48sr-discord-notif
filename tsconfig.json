{
  "ts-node": {
    "files": true,
    // Do not forget to `npm i -D tsconfig-paths`
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "target": "ES2021",
    "lib": [
      "ES2021"
    ],
    "baseUrl": ".",
    "rootDir": "src",
    "module": "commonjs",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "resolveJsonModule": true,
    "strict": true,
    "outDir": ".output",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.js"
  ],
  "compileOnSave": true
}
